<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:albus="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:orientation="vertical"
    android:weightSum="1"
    android:clickable="true"
    android:tag="BigBossTag"
    android:id="@+id/BigBoss">

    <LinearLayout
        android:id="@+id/login_box"
        android:layout_width="match_parent"
        android:background="@color/black"
        android:orientation="vertical"
        android:layout_height="wrap_content"
        android:paddingBottom="30dp"
        android:paddingTop="24dp">

        <com.radmagnet.RoundedImageView
            android:id="@+id/login_pic"
            android:visibility="gone"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="center_horizontal" />

        <ImageView
            android:id="@+id/login_missing"
            android:src="@drawable/login_missing"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="center_horizontal" />


        <com.radmagnet.RadTextView
            android:id="@+id/login_text"
            albus:fontName="AlegreyaSans-ExtraBoldItalic.otf"
            android:textSize="16sp"
            android:text="GUEST"
            android:textColor="@color/allTheRads"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:layout_gravity="center_horizontal" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:clickable="true"
        android:background="@color/events"
        android:id="@+id/login_launcher"
        android:padding="16dp"
        android:gravity="center_vertical">

        <ImageView
            android:src="@drawable/power"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="center_vertical" />

        <com.radmagnet.RadTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SIGN UP / LOGIN"
            android:textSize="18sp"
            albus:fontName="AlegreyaSans-ExtraBoldItalic.otf"
            android:textColor="@color/allTheRads"
            android:layout_marginLeft="26dp"
            android:layout_gravity="center_vertical" />

    </LinearLayout><!-- Login Pending -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:clickable="true"
        android:background="@color/matteBack"
        android:id="@+id/location"
        android:paddingTop="16dp"
        android:paddingLeft="19dp"
        android:paddingRight="16dp"
        android:paddingBottom="12dp"
        >

        <com.radmagnet.RadTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="LOCATION"
            android:textSize="8sp"
            android:textColor="@color/allTheRads"
            albus:fontName="AlegreyaSans-BlackItalic.otf"
            />
        <com.radmagnet.RadTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DUBAI"
            android:textSize="24sp"
            albus:fontName="AlegreyaSans-ExtraBoldItalic.otf"
            android:textColor="@color/allTheRads"
            android:layout_marginTop="-9dp" />

    </LinearLayout><!-- Location -->


    <LinearLayout
        android:id="@+id/rads_i_love"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:clickable="true"
        android:background="@color/black"
        android:paddingTop="24dp"
        android:paddingBottom="12dp"
        android:paddingLeft="16dp"
        android:gravity="clip_vertical">

        <ImageView
            android:src="@drawable/love"
            android:layout_width="24dp"
            android:layout_height="24dp" />

        <com.radmagnet.RadTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="RADS I LOVE"
            android:textSize="12sp"
            albus:fontName="AlegreyaSans-ExtraBoldItalic.otf"
            android:textColor="@color/allTheRads"
            android:layout_marginTop="1dp"
            android:layout_marginLeft="26dp"
            android:layout_gravity="center_vertical" />

    </LinearLayout><!-- Rads I Love -->

    <LinearLayout
        android:id="@+id/categories"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:clickable="true"
        android:background="@color/black"
        android:padding="16dp"
        android:gravity="clip_vertical">

        <ImageView
            android:src="@drawable/categories"
            android:layout_width="24dp"
            android:layout_height="24dp" />

        <com.radmagnet.RadTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CATEGORIES"
            android:textSize="12sp"
            albus:fontName="AlegreyaSans-ExtraBoldItalic.otf"
            android:textColor="@color/allTheRads"
            android:layout_marginTop="1dp"
            android:layout_marginLeft="26dp"
            android:layout_gravity="center_vertical" />

    </LinearLayout><!-- Categories -->

    <LinearLayout
        android:id="@+id/tell_a_friend"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:clickable="true"
        android:background="@color/black"
        android:padding="16dp"
        android:gravity="clip_vertical">

        <ImageView
            android:src="@drawable/tell_a_friend"
            android:layout_width="24dp"
            android:layout_height="24dp" />

        <com.radmagnet.RadTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TELL A FRIEND ABOUT RADMAGNET"
            android:textSize="12sp"
            albus:fontName="AlegreyaSans-ExtraBoldItalic.otf"
            android:textColor="@color/allTheRads"
            android:layout_marginTop="1dp"
            android:layout_marginLeft="26dp"
            android:layout_gravity="center_vertical" />

    </LinearLayout><!-- Tell a Friend -->

    <LinearLayout
        android:id="@+id/logout_trigger"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:clickable="true"
        android:background="@color/black"
        android:padding="16dp"
        android:gravity="clip_vertical">

        <ImageView
            android:src="@drawable/power"
            android:layout_width="24dp"
            android:layout_height="24dp" />

        <com.radmagnet.RadTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="LOGOUT"
            android:textSize="12sp"
            albus:fontName="AlegreyaSans-ExtraBoldItalic.otf"
            android:textColor="@color/allTheRads"
            android:layout_marginTop="1dp"
            android:layout_marginLeft="26dp"
            android:layout_gravity="center_vertical" />

    </LinearLayout><!-- Logout -->



</LinearLayout>
