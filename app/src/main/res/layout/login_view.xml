<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:albus="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black">

    <ImageView
        android:layout_width="290dp"
        android:layout_height="290dp"
        android:src="@drawable/splash_three"
        android:scaleType="fitCenter"
        android:layout_gravity="center_horizontal|top"
        android:layout_marginTop="64dp" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center|bottom"
        android:gravity="center"
        android:layout_marginBottom="16dp">

        <com.radmagnet.RadTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            albus:fontName="AlegreyaSans-Italic.otf"
            android:textSize="16sp"
            android:textColor="@color/allTheRads"
            android:textAllCaps="true"
            android:text="get only those rads which make you go Fooorrkk!"
            android:layout_marginBottom="10dp"
            android:gravity="center_horizontal"
            android:layout_gravity="center_horizontal"
            android:paddingLeft="32dp"
            android:paddingRight="32dp" />

        <LinearLayout
            android:id="@+id/sampleFB"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/facebook"
            android:padding="10dp">

            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/facebook_box"
                />

            <com.radmagnet.RadTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAllCaps="true"
                android:text="Login with Facebook"
                albus:fontName="AlegreyaSans-ExtraBoldItalic.otf"
                android:textSize="18sp"
                android:textColor="@color/allTheRads"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp" />


        </LinearLayout>

        <com.radmagnet.RadTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            albus:fontName="AlegreyaSans-ExtraBoldItalic.otf"
            android:textSize="10sp"
            android:textAllCaps="true"
            android:text="We will never post anything on your behalf"
            android:layout_marginBottom="10dp"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:textColor="#99aaaa"
            android:layout_marginTop="4dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:clickable="true"
        android:id="@+id/back_trigger"
        android:padding="16dp"
        android:gravity="center_vertical">

        <ImageView
            android:src="@drawable/back"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="center_vertical" />

        <com.radmagnet.RadTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="BACK"
            android:textSize="18sp"
            albus:fontName="AlegreyaSans-ExtraBoldItalic.otf"
            android:textColor="@color/allTheRads"
            android:layout_marginLeft="12dp"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="-1dp" />

    </LinearLayout><!-- Login Pending -->



</FrameLayout>